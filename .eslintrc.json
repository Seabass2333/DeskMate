{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "window": "readonly",
        "document": "readonly",
        "STATES": "readonly",
        "AnimationManager": "readonly",
        "StateMachine": "readonly",
        "EnergyManager": "readonly",
        "PomodoroManager": "readonly",
        "ReminderManager": "readonly",
        "DragController": "readonly",
        "ChatManager": "readonly",
        "NotificationManager": "readonly",
        "SkinManager": "readonly",
        "showBubble": "readonly",
        "hideBubble": "readonly",
        "playJumpSound": "readonly",
        "playClickSound": "readonly",
        "energyManager": "writable",
        "notificationManager": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "indent": [
            "warn",
            4
        ],
        "no-undef": "error"
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "*.min.js"
    ]
}