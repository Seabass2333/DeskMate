# DeskMate API Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL=postgres://deskmate:YOUR_PASSWORD@localhost:5432/deskmate

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Email (for OTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=DeskMate <noreply@example.com>

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
