{
  "name": "deskmate",
  "version": "1.0.0",
  "description": "A cute desktop pet with AI chat, Pomodoro timer, and reminders",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder --publish never",
    "build:mac": "electron-builder --mac --universal --publish never",
    "build:win": "electron-builder --win --x64 --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:all": "electron-builder -mwl --publish never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "desktop-pet",
    "pomodoro",
    "ai-assistant",
    "productivity"
  ],
  "author": "Seabass2333",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Seabass2333/DeskMate.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.seabass2333.deskmate",
    "productName": "DeskMate",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.git/**",
      "!.github/**",
      "!*.md",
      "!_raw_assets/**",
      "!.agent/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/images/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "assets/images/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Seabass2333",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/images/icon.png",
      "uninstallerIcon": "assets/images/icon.png",
      "installerHeaderIcon": "assets/images/icon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DeskMate"
    },
    "linux": {
      "icon": "assets/images/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "maintainer": "Seabass2333",
      "synopsis": "Cute desktop pet with AI chat",
      "description": "A cute desktop pet companion with AI chat, Pomodoro timer, and productivity reminders"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-linux.${ext}"
    }
  }
}