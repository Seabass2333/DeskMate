{
  "name": "deskmate",
  "version": "1.0.0",
  "description": "A cute desktop pet with AI chat, Pomodoro timer, and reminders",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "desktop-pet",
    "pomodoro",
    "ai-assistant",
    "productivity"
  ],
  "author": "Seabass2333",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Seabass2333/DeskMate.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.seabass2333.deskmate",
    "productName": "DeskMate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.git/**",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/images/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/images/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/images/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
